@page
@model p1_conversor.Pages.Calculator.IndexModel

<div class="container">
    <h2>Conversor de Bases Numéricas</h2>
    
    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Number">Número:</label>
            <input asp-for="Input.Number" class="form-control" />
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.FromBase">Base origen (2-36):</label>
                    <input asp-for="Input.FromBase" class="form-control" min="2" max="36" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Input.ToBase">Base destino (2-36):</label>
                    <input asp-for="Input.ToBase" class="form-control" min="2" max="36" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Convertir</button>
    </form>
    <p>Desarrollado por Ing. Gaston Quelali</p>
    @if (!string.IsNullOrEmpty(Model.Result))
    {
        <div class="mt-4 alert alert-success">
            <h4>Resultado:</h4>
            <p>@Model.Result</p>
        </div>
    }
</div>
